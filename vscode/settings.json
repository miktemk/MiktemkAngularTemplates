// Place your settings in this file to overwrite the default settings
{
  "workbench.colorTheme": "Default Light+",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  // "shellLauncher.shells.windows": [
  //   {
  //     "shell": "C:\\Windows\\sysnative\\cmd.exe",
  //     "label": "cmd"
  //   },
  //   {
  //     "shell": "C:\\Windows\\sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
  //     "label": "PowerShell"
  //   },
  //   {
  //     "shell": "C:\\Program Files\\Git\\bin\\bash.exe",
  //     "label": "Git bash"
  //   },
  //   {
  //     "shell": "C:\\Windows\\sysnative\\bash.exe",
  //     "label": "WSL Bash"
  //   }
  // ],
  "workbench.iconTheme": "easy-icons",
  "editor.wordSeparators": "`~!-@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "[css]": {
    "editor.wordSeparators": "`~!%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[less]": {
    "editor.wordSeparators": "`~!%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.wordSeparators": "`~!%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[javascript]": {
    "editor.wordSeparators": "`~!#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.wordSeparators": "`~!#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.wordSeparators": "`~!#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.wordSeparators": "`~!#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.tabSize": 2
  },
  "window.zoomLevel": -1,
  //"typescript.check.tscVersion": false,
  "editor.renderWhitespace": "all",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.enabled": false,
  //"gitlens.blame.line.enabled": false,
  "window.title": "${rootName} | ${dirty} ${activeEditorShort} | ${appName}",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "beautify.config": {
    "indent_size": 2,
    "indent_char": " ",
    "indent_with_tabs": false,
    "selector-separator-newline": true,
    "newline-between-rules": true,
    "preserve_newlines": true,
    "max_preserve_newlines": 99999
  },
  "beautify.language": {
    "js": {
      "type": [
        "javascript",
        "json"
      ],
      "filename": [
        ".jshintrc",
        ".jsbeautifyrc"
      ]
      // "ext": ["js", "json"]
      // ^^ to set extensions to be beautified using the javascript beautifier
    },
    "css": [
      "css",
      "scss",
      "less"
    ],
    "html": [
      "htm",
      "html"
    ]
    // ^^ providing just an array sets the VS Code file type
  },
  "gitlens.keymap": "alternate",
  "gitlens.historyExplorer.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "html.format.wrapLineLength": 99999,
  "liveServer.settings.host": "localhost",
  "liveServer.settings.port": 4200,
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.projectDetection.disableDetect": true,
  "svg.preview.autoOpen": true,
  "svg.preview.boundingBox": true
}